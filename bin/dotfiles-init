#!/bin/sh
cd

# initialize git repo
# TODO: clone into tmp name, in case ~/dotfiles happens to exist
git clone https://github.com/abramclark/dotfiles.git
cd dotfiles; cp -r $(dir -A) ..;  cd ..
rm -rf dotfiles
git config status.showuntrackedfiles no # don't track everything in ~

# initialize local files
cp .bash.d/90.prompt_color.sh .bash.d/91.prompt_color.local.sh

# initialize vim
curl -fLo ~/.vim/autoload/plug.vim --create-dirs https://raw.githubusercontent.com/junegunn/vim-plug/master/plug.vim
mkdir ~/.vim/plugged
vim -c PlugInstall
